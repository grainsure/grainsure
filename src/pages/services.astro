---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';
import RepairService from '~/assets/images/service01.png'
import RenewService from '~/assets/images/renewcert01.png'

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Elevate your projects with our stunning templates"
    subtitle="Explore our meticulously crafted templates tailored to various industries and purposes. From captivating presentations to functional website designs, we offer the tools you need to succeed."
    actions={[{ variant: 'primary', target: '_blank', text: 'Start exploring', href: '/' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AstroWind Hero Image',
    }}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    id="RepairServices"
    items={[
      {
        title: 'รับซ่อมเครื่องวัดความชื้นของ Grainsure ทุกรุ่น ไม่จำกัดปีผลิต/ปีที่ซื้อ',
        icon: 'tabler:wand',
      },
      {
        title: 'ดูแลครบ จบทุกปัญหา..ซ่อมได้ทุกอาการเสีย',
        description:
          'เราเข้าใจทุกชิ้นส่วนอย่างลึกซึ้ง จึงพร้อมซ่อมแซมได้ทุกสภาพความเสียหาย ทั้งจากการเสื่อมสภาพตามกาลเวลา อุบัติเหตุที่ไม่คาดคิด หรือการใช้งานผิดวิธี เพื่อให้คุณได้เครื่องมือคู่ใจกลับไปใช้งานโดยเร็วที่สุด',
        icon: 'tabler:settings',
      },
      {
        title: 'ประเมินราคาตามจริง ยุติธรรม โปร่งใส',
        description:
          'ค่าใช้จ่ายอ้างอิงตามต้นทุนอะไหล่และค่าแรงจริงโดยไม่มีการบวกเพิ่มเกินความจำเป็น สำหรับกรณีซ่อมแซมเพียงเล็กน้อย เราพร้อมดูแลและอำนวยความสะดวกด้วยความเต็มใจ เพื่อให้ท่านสามารถนำเครื่องกลับไปใช้งานได้อย่างคุ้มค่าที่สุด',
        icon: 'tabler:presentation',
      },
    ]}
    image={{
      src: RepairService,
      alt: 'Features Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">บริการซ่อมเครื่องวัดความชื้น</h3>
    </Fragment>
  </Content>

  <Content
    id="RepairServices"
    items={[
      {
        title: 'รับซ่อมเครื่องวัดความชื้นของ Grainsure ทุกรุ่น ไม่จำกัดปีผลิต/ปีที่ซื้อ',
        icon: 'tabler:wand',
      },
      {
        title: 'ดูแลครบ จบทุกปัญหา..ซ่อมได้ทุกอาการเสีย',
        description:
          'เราเข้าใจทุกชิ้นส่วนอย่างลึกซึ้ง จึงพร้อมซ่อมแซมได้ทุกสภาพความเสียหาย ทั้งจากการเสื่อมสภาพตามกาลเวลา อุบัติเหตุที่ไม่คาดคิด หรือการใช้งานผิดวิธี เพื่อให้คุณได้เครื่องมือคู่ใจกลับไปใช้งานโดยเร็วที่สุด',
        icon: 'tabler:settings',
      },
      {
        title: 'ประเมินราคาตามจริง ยุติธรรม โปร่งใส',
        description:
          'ค่าใช้จ่ายอ้างอิงตามต้นทุนอะไหล่และค่าแรงจริงโดยไม่มีการบวกเพิ่มเกินความจำเป็น สำหรับกรณีซ่อมแซมเพียงเล็กน้อย เราพร้อมดูแลและอำนวยความสะดวกด้วยความเต็มใจ เพื่อให้ท่านสามารถนำเครื่องกลับไปใช้งานได้อย่างคุ้มค่าที่สุด',
        icon: 'tabler:presentation',
      },
    ]}
    image={{
      src: RenewService,
      alt: 'Features Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">บริการซ่อมเครื่องวัดความชื้น</h3>
    </Fragment>
  </Content>

<CallToAction
  actions={[
    {
      variant: 'secondary',    /* แนะนำ: ใช้ secondary เพื่อให้ดูเป็นปุ่มนำทาง */
      text: 'กลับสู่หน้าหลัก',    /* ข้อความบนปุ่ม */
      href: '/',               /* ลิงก์กลับหน้า Home */
      icon: 'tabler:arrow-left', /* ไอคอนลูกศรชี้กลับ */
    },
  ]}
/>
</Layout>
