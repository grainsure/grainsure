---
import { Icon } from 'astro-icon/components';
import { trimSlash } from '~/utils/permalinks';

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;

const navItems = [
  { 
    text: 'บ้าน', 
    href: '/', 
    icon: 'tabler:home' 
  },
  { 
    text: 'สินค้า', 
    href: '/#products', 
    icon: 'tabler:shopping-bag' // ในรูปเป็นถุงช้อปปิ้ง
  },
  { 
    text: 'ความรู้', 
    href: '/article', 
    icon: 'tabler:book' // ในรูปเป็นถุงช้อปปิ้ง
  },
  { 
    text: 'โทร', 
    href: 'tel:0812345678', // **อย่าลืมเปลี่ยนเบอร์ตรงนี้ครับ**
    icon: 'tabler:phone' 
  },
  { 
    text: 'Line', 
    href: 'https://line.me/ti/p/xxxxxx', // **ใส่ลิงก์ Line ของคุณตรงนี้**
    icon: 'tabler:message-circle-2' // หรือใช้ tabler:brand-line ถ้ามี
  },
];
---

<nav class="md:hidden fixed bottom-0 left-0 z-50 w-full bg-white border-t border-gray-200 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)]">
  <div class="grid h-full max-w-lg grid-cols-5 mx-auto">
    
    {navItems.map((item) => {
      const isActive = item.href === '/' 
        ? currentPath === '/' 
        : currentPath.startsWith(item.href);

      // สี: ถ้า Active เป็นสีเขียว (ตามธีม Grainsure), ถ้าไม่ Active เป็นสีเทา
      const colorClass = isActive 
        ? 'text-green-600' 
        : 'text-gray-500 hover:text-green-600';

      return (
        <a 
          href={item.href} 
          /* เพิ่ม target="_blank" ถ้าเป็น Line เพื่อไม่ให้ปิดเว็บเรา */
          target={item.text === 'Line' ? '_blank' : '_self'}
          class="inline-flex flex-col items-center justify-center px-5 py-3 group transition-colors bg-white"
        >
          <Icon name={item.icon} class={`w-6 h-6 mb-1 ${colorClass}`} />
          <span class={`text-[11px] font-medium ${colorClass}`}>{item.text}</span>
        </a>
      );
    })}

  </div>
 
